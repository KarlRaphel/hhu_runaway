.scroll-body {
    position: relative;
    width: 100%;
    height: calc(100vh - 44px);
}

.list-body {
    position: relative;
    width: 100%;
    height: 100%;
}

.total {
    color: #aaa;
    font-size: 0.5rem;
    padding: 0 32rpx 12rpx;
    background-color: #fff;
}

.empty-box {
    position: absolute;
    text-align: center;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: #aaa;
}

.empty-icon {
    width: 212rpx;
    height: 170rpx;
    display: block;
}

.btn-list {
    position: absolute;
    width: 100%;
    bottom: 0;
}