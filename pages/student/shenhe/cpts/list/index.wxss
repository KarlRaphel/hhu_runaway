.scroll-body {
    position: relative;
    width: 100%;
    height: calc(100vh - 44px);
}

.list-body {
    position: relative;
    width: 90%;
    left: 5%;
    height: 100%;
}

.list-body>.card {
    position: relative;
    width: 100%;
    border-radius: 32rpx;
    background: white;
    box-shadow: 0 0 20rpx rgba(180,180,180,0.4);
    margin: 32rpx 0;
    padding: 28rpx 0;
}

.card:active {
    background-color: #fafafa;
}

.card>.title {
    font-weight: bold;
    padding-left: 32rpx;
    font-size: 0.9rem;
}

.card>.row {
    position: relative;
    color: #aaa;
    padding: 4rpx 0 0 32rpx;
    width: 80%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 0.8rem;
}

.user-tag {
    position: relative;
    top: -2rpx;
    color: #fff;
    display: inline-block;
    border-radius: 8rpx;
    padding: 2rpx 16rpx;
    font-size: 0.6rem;
    background: rgb(9,185,255);
    margin-left: 12rpx;
}

.card>.context {
    color: #444;
    margin-top: 8rpx;
    font-size: 0.9rem;
}

.card .tag {
    display: inline;
    margin-left: 6rpx;
}

.empty-box {
    position: absolute;
    text-align: center;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: #aaa;
}

.empty-icon {
    width: 212rpx;
    height: 170rpx;
    display: block;
}

.btn-list {
    position: absolute;
    width: 100%;
    bottom: 0;
}