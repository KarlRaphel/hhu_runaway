page {
    background: #f7f8fa;
    height: 100vh;
}

.view-body {
    position: absolute;
    width: 100%;
    height: calc(100vh - 44px);
    overflow: auto;
}

.btn-list {
    position: absolute;
    width: 100%;
    bottom: 0;
}

.mask {
    position: absolute;
    top: 0;
    z-index: 99;
    width: 100%;
    height: 100vh;
}

.calendar {
    height: 50vh;
    padding-bottom: 32rpx;
    background-color: white;
}

.no-data {
    width: 100%;
    height: 700rpx;
    background-color: white;
    text-align: center;
}

.no-data>.text {
    position: absolute;
    top: 50%;
    width: 100%;
    color: #444;
    transform: translateY(-50%);
}