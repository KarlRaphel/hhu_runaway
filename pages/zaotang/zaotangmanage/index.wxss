page {
    background: #f7f8fa;
    height: 100vh;
}

.view-body {
    position: absolute;
    width: 100%;
    height: calc(100vh - 44px);
    overflow: auto;
}

.btn-list {
    position: absolute;
    width: 100%;
    bottom: 0;
}

.mask {
    position: absolute;
    top: 0;
    z-index: 99;
    width: 100%;
    height: 100vh;
}

.calendar {
    height: 50vh;
    padding-bottom: 32rpx;
    background-color: white;
}

.no-data {
    width: 100%;
    height: 700rpx;
    background-color: white;
    text-align: center;
    color: #aaa;
}

.no-data>.text {
    position: absolute;
    top: 40%;
    width: 100%;
    color: #444;
    transform: translateY(-50%);
}

.addnew {
    position: relative;
    margin: auto;
    padding: 5px 12px;
    color: white;
    background-color: rgb(0,153,255);
    border-radius: 5px;
    display: inline-block;
}